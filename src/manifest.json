{
    "manifest_version": 3,
    "name": "Web Edit",
    "description": "Easily edit websites temporarily with a click of a button.",
    "version": "1.0.0",
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_title": "Click to toggle editing or press Ctrl/âŒ˜ + Comma."
    },
    "author": "ryan.luu@ryanluu.dev",
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": "Ctrl+Comma"
        }
